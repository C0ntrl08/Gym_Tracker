<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gym_Tracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Gym_Tracker"
    xmlns:pages="clr-namespace:Gym_Tracker.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Gym_Tracker">

    <TabBar>
        
    <ShellContent
        Title="Exercises" Icon="dumbbell_symbol.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Training" Icon="training_symbol.png"
        ContentTemplate="{DataTemplate pages:TrainingPage}"
        Route="TrainingPage" />
    <ShellContent
        Title="Premium" Icon="premium_symbol.png"
        ContentTemplate="{DataTemplate pages:PremiumPage}"
        Route="PremiumPage" />
    <ShellContent
        Title="Register" Icon="register.png"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />

    </TabBar>


</Shell>
