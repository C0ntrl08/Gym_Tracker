<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym_Tracker.Pages.ExerciseDetailPage"
             xmlns:viewmodel="clr-namespace:Gym_Tracker.ViewModels"
             x:DataType="viewmodel:ExerciseDetailViewModel"
             Title="{Binding PageTitle}">
    
    <!-- Set the BindingContext to an instance of ExerciseDetailViewModel -->
    <ContentPage.BindingContext>
        <viewmodel:ExerciseDetailViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="{Binding Name}" 
                   FontSize="Large" 
                   FontAttributes="Bold"/>

            <Label Text="{Binding LongDescription}" FontSize="Medium"/>

            <!-- You can display a video via WebView, or use an appropriate video control -->
            <WebView Source="{Binding VideoUrl}" HeightRequest="200"/>
        </StackLayout>
    </ScrollView>
</ContentPage>